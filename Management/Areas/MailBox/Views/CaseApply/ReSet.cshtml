@model Management.Areas.MailBox.Models.CaseApply.IndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="white-box">
            <div class="bootstrap-table">
                <div class="row searchBar1">
                    <div class="col">
                        <label class="col-form-label">
                            站台：
                        </label>
                        <select id="CaseApplyClassSN0" name="CaseApplyClassSN0" class="form-control" onchange="changeW()">
                            <option value="">--請選擇--</option>
                            @foreach (var item in Model.casesModels.OrderBy(x=>x.WebSiteSort).GroupBy(x => new { x.WebSiteID, x.WebSiteName }))
                            {
                                <option value="@item.Key.WebSiteID">@item.Key.WebSiteName</option>
                            }
                        </select>
                    </div>
                    <div class="col">
                        <label class="col-form-label">
                            意見分類：
                        </label>
                        <select id="CaseApplyClassSN" name="CaseApplyClassSN" class="form-control">
                            <option value="">--請選擇--</option>
                            @foreach (var item in Model.casesModels.OrderBy(x => x.CaseNo))
                            {
                                <option class="@item.WebSiteID classitems" value="@item.CaseApplyClassSN" style="display:none">@("(" + item.CaseNo + ")" + item.CaseName)</option>
                            }
                        </select>
                    </div>
                    <div class="col">
                        <label class="col-form-label">
                            關鍵字：
                        </label>
                        <div class="row">
                            <div class="col">
                                <input type="text" id="QryKeyword" class="form-control" placeholder="關鍵字">
                            </div>
                            <div class="col">
                                <input type="button"
                                       value="查詢" onclick="searchFunction(1)"
                                       class="ubtn-search">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="uTable3">
                <div id="tableList" style="min-width: 1200px;"></div>
            </div>
        </div>
        <div id="DepArea"></div>
    </div>
</div>

@section scripts{
<script>

    function changeW(){
        var webSite = MODAhtmlEncode($("#CaseApplyClassSN0"),"val");
        $(".classitems").hide();
        $("."+webSite).show();
        $("[name=CaseApplyClassSN]").val("");
    }
    var href = "@Url.Action("ReSetList", "CaseApply", new { area = "MailBox" })";
    var backperPageShow = 0;
    var back = getCookie("back");
    if (back == 1) {
        var objstr = getCookie("GupObj");
        if (objstr != "") {
            if (JSON.parse(objstr) != "") {
                var obj = JSON.parse(objstr);
                $('#perPageShow').val(obj.displayCount);
                backperPageShow = obj.displayCount;
                $("#QryKeyword").val(obj.keyword);
                searchFunction(obj.p);
            } else {
                searchFunction(1);
            }
        } else {
            searchFunction(1);
        }
    } else {
        searchFunction(1);
    }
    SetCookie("back", "");

    $(document).on("click", ".page_a", function () {
        var p = getObjAtr($(this), "data-page");
        searchFunction(p);
    });
    function searchFunction(p) {
        $('.preloader').show();
        var CaseApplyClassSN0 = MODAhtmlEncode($("#CaseApplyClassSN0"),"val");
        var CaseApplyClassSN = MODAhtmlEncode($("#CaseApplyClassSN"),"val");
        var keyword = MODAhtmlEncode($("#QryKeyword"),"val");
        var DisplayCount = MODAhtmlEncode($('#perPageShow'),"val");
        var diCount = diCountFunction(15, DisplayCount, backperPageShow);
        var selectobj = {
            "displayCount": diCount,
            "p": p,
            "CaseApplyClassSN0": CaseApplyClassSN0,
            "CaseApplyClassSN": CaseApplyClassSN,
            "keyword": keyword,
        };
        SetCookie("GupObj", selectobj);
        var getUrl = "?CaseApplyClassSN0="+selectobj.CaseApplyClassSN0+"&CaseApplyClassSN="+selectobj.CaseApplyClassSN+"&keyword=" + selectobj.keyword + "&p=" + p;
        var pageUrl = href + getUrl;

        reloadDataTable(pageUrl);
    }
    function reloadDataTable(href) {
        $("#tableList").html("");
        $("#tableList").load(href, function () {
            $('.preloader').hide();
        });
    }
    function SendApi(CaseNo){
        $.ajax({
            url: '@Url.Action("SendAPI", "CaseApply", new { area = "MailBox" })',
            type: 'post',
            data: {
                "CaseNo": CaseNo
            },
            dataType: "json",
            success: function(data) {
                $('.preloader').hide();
                if (data.statusCode == 200) {
                    Swal.fire({
                         icon: "success",
                         title: data.content
                    }).then(function(){
                        searchFunction(1);
                    });
                }
                else {
                    Swal.fire({
                        icon: "warning",
                        title: data.content
                    });
                }
            }
        });
    }
    function Detail(p)
    {
        location.href='@Url.Action("ReSetDetail", "CaseApply", new { area = "MailBox" })?sn='+p;
    }
</script>
}